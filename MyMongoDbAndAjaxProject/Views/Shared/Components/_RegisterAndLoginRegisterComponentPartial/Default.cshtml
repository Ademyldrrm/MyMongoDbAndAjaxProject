@model Register

<section class="signup">
    <div class="container">
        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title">Kayıt Ol</h2>
                <form method="post" asp-action="CreateRegister2" asp-controller="_RegisterAndLoginLayout">
                    <div class="form-group">
                        <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="text" asp-for="NameSurname" id="name" placeholder="Ad Soyad" />
                    </div>
                    <div class="form-group">
                        <label for="email"><i class="zmdi zmdi-email"></i></label>
                        <input type="email" asp-for="EMail" id="email" placeholder="E Mail" />
                    </div>
                    <div class="form-group">
                        <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                        <input type="password" asp-for="Password" id="pass" placeholder="Şifre" />
                    </div>
                    
                    <div class="form-group form-button">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Kayıt Ol" />
                    </div>
                </form>
            </div>
            <div class="signup-image">
                <figure><img src="~/colorlib-regform-7/images/signup-image.jpg" alt="sing up image"></figure>
                <a href="#" class="signup-image-link">I am already member</a>
            </div>
        </div>
    </div>
</section>