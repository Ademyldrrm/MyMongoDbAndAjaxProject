@model List<Register>
@{
    ViewData["Title"] = "RegiserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">

    <div class="card card-solid">
        <div class="card-body pb-0">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                    <div class="card bg-light d-flex flex-fill">
                        <div class="card-header text-muted border-bottom-0">
                            Digital Strategist
                        </div>
                        <div class="card-body pt-0">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead"><b>@item.NameSurname</b></h2>
                                    <p class="text-muted text-sm"><b>EMail: </b>@item.EMail</p>
                                    <br />
                                     <p class="text-muted text-sm"><b>Şifre: </b>@item.Password</p>
                                    
                                </div>
                                <div class="col-5 text-center">
                                    <img src="@item.Imageurl" alt="user-avatar" class="img-circle img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                    <a href="/_RegisterAndLoginLayout/DeleteUser/@item.RegisterID" class="btn btn-sm bg-teal">
                                    <i class="fas fa-comments">Sil</i>
                                </a>
                                <a href="#" class="btn btn-sm btn-primary">
                                    <i class="fas fa-user"></i> Profili Güncelle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                }
                
            </div>
        </div>

    </div>
    <!-- /.card -->

</section>